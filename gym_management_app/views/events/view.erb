<h1>
  Class view
</h1>
<main>
  <table>
    <thead>
      <tr>
        <th>Class</th>
        <th>Date</th>
        <th>Time</th>
        <th>Capacity</th>
        <th></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan='3'>
        </th>
      </tr>
    </tfoot>
    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td data-title='Class'>
          <%= event.event_type %>
        </td>
        <td data-title='Date'>
          <%= event.event_date %>
        </td>
        <td data-title='Time'>
          <%= event.event_time %>
        </td>
        <td data-title='Capacity'>
          <%= event.event_caps %>
        </td>
        <td class='select'>
          <div class="btn-group">
            <form action="/events/<%= event.id %>/delete" method="POST">
              <a href="/attendants/<%=event.id%>" class="btn btn-view">View</a>
              <a href="/events/<%=event.id%>/edit"   class="btn btn-edit">Edit</a>
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
