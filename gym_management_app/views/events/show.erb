<h1>
  Class timetable
</h1>
<main>
  <table>
    <thead>
      <tr>
        <th>Class</th>
        <th>Date</th>
        <th>Time</th>
        <th>Available</th>
        <th></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan='3'>
        </th>
      </tr>
    </tfoot>
    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td data-title='Class'>
          <%= event.event_type %>
        </td>
        <td data-title='Date'>
          <%= event.event_date %>
        </td>
        <td data-title='Time'>
          <%= event.event_time %>
        </td>
        <td data-title='Capacity'>
          <%= event.event_caps %>
        </td>
        <td class='select'>
          <div class="btn-group">
            <a href="/attendants/<%=event.id%>" class="btn btn-view">View</a>

          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
