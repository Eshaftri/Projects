
<div class="div-h1">
<h1>memebr in Class <%= @event.event_type%></h1>
</div>
<table class="members_table" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Title</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @event.members.each do |member| %>
    <tr>
      <td><%= member.title %></td>
      <td><%= member.first_name %></td>
      <td><%= member.last_name %></td>
      <td>
        <div class="btn-group">
          <form class="form-del" action="/attendants/<%= member.attendants.id %>/delete" method="POST">
            <button type="submit" class="btn btn-delete">Delete</button>
          </form>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
