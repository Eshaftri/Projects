<h1>
  memebr in Class <%= @event.event_type%>
</h1>
<main>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan='3'>
        </th>
      </tr>
    </tfoot>
    <tbody>
      <% @event.members.each do |member| %>
      <tr>
        <td data-title='Title'>
          <%= member.title %>
        </td>
        <td data-title='First Name'>
          <%= member.first_name %>
        </td>
        <td data-title='Last Name'>
          <%= member.last_name %>
        </td>
        <td class='select'>
          <div class="btn-group">
            <form class="form-del" action="/attendants/<%= member.attendants.id %>/delete" method="POST">
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
