
<h1>
  View Members
</h1>
<main>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>DoB</th>

        <th></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th colspan='3'>
        </th>
      </tr>
    </tfoot>
    <tbody>
      <% @members.each do |member| %>
      <tr>
        <td data-title='Title'>
          <%= member.title %>
        </td>
        <td data-title='First Name'>
          <%= member.first_name %>
        </td>
        <td data-title='Last Name'>
          <%= member.last_name %>
        </td>
        <td data-title='Address'>
          <%= member.address %>
        </td>
        <td data-title='Dob'>
          <%= member.dob %>
        </td>
        <td class='select'>
          <div class="btn-group">
            <form class="form-del" action="/members/<%= member.id %>/delete" method="POST">
              <a href="/members/<%=member.id%>/edit" class="btn btn-edit">Edit</a>
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
